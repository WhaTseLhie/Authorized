<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.drawer.anewtemp.ac.ZOneHeadingActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Your letter will look like this:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/txtLetterHeading"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="50dp"
            android:textColor="@color/black"
            android:background="@drawable/style_edit_text_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- ///////////  SENDER    //////////// -->
        <TextView
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:text="What is your name?"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/txtLetterSenderName"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="[YOUR NAME]"
            android:background="@drawable/style_edit_text_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:text="What is your street address?"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/txtLetterSenderSt"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:hint="e.g.  Colon St."
            android:background="@drawable/style_edit_text_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:text="What is your city?"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/txtLetterSenderCity"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:hint="e.g.  Cebu City"
            android:background="@drawable/style_edit_text_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:text="What is your province?"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/txtLetterSenderProvince"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:hint="e.g.  Cebu"
            android:background="@drawable/style_edit_text_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:text="What is your zip code?"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/txtLetterSenderZip"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:hint="e.g.  6000"
            android:inputType="number"
            android:background="@drawable/style_edit_text_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:text="Date Today"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/txtLetterDate"
            android:padding="10dp"
            android:textSize="18sp"
            android:text="[DATE]"
            android:textColor="@color/black"
            android:layout_marginBottom="30dp"
            android:background="@drawable/style_edit_text_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</ScrollView>