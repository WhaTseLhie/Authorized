<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="register.GenderActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:text="What's your gender?"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layoutDirection="rtl"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButton"
                android:text="Male"
                android:gravity="start|center"
                android:drawablePadding="30dp"
                android:layout_marginBottom="5dp"
                android:buttonTint="@color/blue"
                android:textColor="@color/black"
                android:drawableEnd="@drawable/ic_android_male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:text="Female"
                android:layout_marginTop="5dp"
                android:gravity="start|center"
                android:drawablePadding="30dp"
                android:buttonTint="@color/pink"
                android:textColor="@color/black"
                android:drawableEnd="@drawable/ic_android_female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:text="Don't Specify"
                android:gravity="start|center"
                android:drawablePadding="30dp"
                android:layout_marginTop="10dp"
                android:buttonTint="@color/yellow"
                android:textColor="@color/black"
                android:drawableEnd="@drawable/ic_android_others"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <Button
            android:id="@+id/button"
            android:text="NEXT"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/white"
            android:background="@drawable/style_button_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>