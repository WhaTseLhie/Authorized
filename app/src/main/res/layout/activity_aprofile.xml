        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Digital Signature"
                android:textColor="@color/white"
                android:background="@color/blue"
                android:layout_weight="1"
                android:padding="10dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtUpdateSignature"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Update"
                android:gravity="center"
                android:layout_weight="4"
                android:background="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivSignature"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/delete_ic_sample_signature"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:text="ACCOUNT INFORMATION"
                android:textColor="@color/white"
                android:padding="10dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="3"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Username"/>

                <TextView
                    android:id="@+id/txtUserName"
                    android:layout_weight="1.3"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="username"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="3"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Password"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1.3"
                    android:background="@color/blue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txtPassword"
                        android:inputType="textWebPassword"
                        android:text="********"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <CheckBox
                        android:id="@+id/cbPass"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:paddingEnd="70dp"
                        android:paddingStart="5dp"
                        android:background="@color/white"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </LinearLayout>
            </LinearLayout>



            <Button
                android:id="@+id/btnChangePass"
                android:text="CHANGE PASSWORD"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/style_button_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>